---
import Layout from '../layouts/BaseLayout.astro';

const title = 'Page not found';
const description = 'My personal website with my projects and blog.';
const extraKeywords = [
  'Web Development',
  'JavaScript',
  'TypeScript',
  'HTML',
  'CSS',
  'Monorepos',
  'Nx',
  'Angular',
];
---

<Layout title={title} description={description} extraKeywords={extraKeywords}>
  <div
    class="flex w-full flex-col items-center justify-center bg-cyan-900 p-4 text-center transition-all sm:p-16"
  >
    <h2 class="text-2xl transition-all sm:text-4xl">
      It looks like you're lost.
    </h2>
    <p class="mt-8 transition-all sm:text-lg">
      The page you're looking for doesn't exist.
    </p>
    <a
      class="mt-12 border-2 p-2 transition-all hover:border-cyan-400 hover:text-cyan-400 sm:mt-16"
      href="/"
    >
      Go back home
    </a>
  </div>
</Layout>
